<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="2"

    tools:context="com.example.abdelrahman.note.Activity_signup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Note"
            android:textColor="@color/color_note2"
            android:textSize="60dp"

            />


        <!--<ImageButton-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/ibtn_image"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@drawable/hh"-->
        <!--android:src="@drawable/hh"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--/>-->

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_style2"
android:drawableStart="@drawable/ic_person_black_24dp"
            android:fontFamily="monospace"
            android:hint="First Name"
            android:padding="5dp"
            android:textColor="@color/color_note2"
            android:textColorHint="@color/color_hint" />

        <EditText
            android:drawableStart="@drawable/ic_supervisor_account_black_24dp"
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_style2"
            android:fontFamily="monospace"
            android:hint="Last Name"
            android:padding="5dp"
            android:textColor="@color/color_note2"
            android:textColorHint="@color/color_hint"

            />

        <EditText
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_style2"
            android:fontFamily="monospace"
            android:hint="Email"

            android:padding="5dp"
            android:textColor="@color/color_note2"
            android:textColorHint="@color/color_hint" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_style2"
            android:fontFamily="monospace"
            android:hint="Password"
            android:padding="5dp"
            android:password="true"
            android:textColor="@color/color_note2"
            android:textColorHint="@color/color_hint" />

        <EditText
            android:id="@+id/et_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_style2"
            android:fontFamily="monospace"
            android:hint="RePassword"
            android:drawableStart="@drawable/ic_lock_open_black_24dp"
            android:padding="5dp"
            android:password="true"
            android:textColor="@color/color_note2"
            android:textColorHint="@color/color_hint" />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_style2"
            android:gravity="center"
            android:text="save"
            android:textColor="@color/color_note"

            />


</LinearLayout>
